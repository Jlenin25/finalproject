<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B0B"
    android:id="@+id/frmPerfil"
    tools:context=".actividad.FragmentoPerfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mantenimiento Perfil"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtNomPer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#fff"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Nombre de usuario"
            android:textColor="#FFFFFF"
            android:textColorHint="#fff"
            android:autofillHints="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="-40dp"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:text="Estado"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/chkEstper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Habilitado"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegistrarper"
                style='?attr/materialButtonOutlinedStyle'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal='10dp'
                android:layout_weight="1"
                android:text="Registrar"
                android:textColor="#2196F3"
                android:textStyle="bold"
                app:cornerRadius='50dp'
                app:strokeColor='#2196F3'
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnActualizarper"
                style='?attr/materialButtonOutlinedStyle'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Actualizar"
                android:textColor="#21EA53"
                android:textStyle="bold"
                app:cornerRadius="50dp"
                app:strokeColor="#21EA53" />

            <Button
                android:id="@+id/btnEliminarper"
                style='?attr/materialButtonOutlinedStyle'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Eliminar"
                android:textColor="#FF0000"
                android:textStyle="bold"
                app:cornerRadius="50dp"
                app:strokeColor="#FF0000" />
        </LinearLayout>
        <ListView
            android:id="@+id/lstPer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>